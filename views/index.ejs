<%- include header %>
	<% if (!posts.length)  {%>
		<p><%= title %></p>
	<%} else {%>
		<% posts.forEach(function (post, index) { %>
			<p><h2><%= post.title %></h2></p>
			<p class="info">
				作者：<a href="#"><%= post.name %></a> | 
				日期：<%= post.time.minute %>
				<% if (isLogin)  {%>
					<span href="#" onClick="deleteData(event, '<%= post.id %>')">delete</span>
					<a href="modify/<%= post.id %>">modify</a>
				<% } %>
			</p>
			<p><%- post.post %></p>
		<% }) %>
	<% } %>
<%- include footer %>
